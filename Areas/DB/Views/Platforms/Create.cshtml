@using BROWSit.Models;
@model BROWSit.Models.PlatformDBModel

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Platform</legend>

        <h4>@Model.message</h4>

        <div class="editor-label">
            @Html.LabelFor(model => model.platform.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.platform.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.platform.Requirements)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.myRequirement, 
                new SelectList(Model.requirements, "ID", "Title"))
        </div>

        <p>
            <button class="btn btn-default" type="submit" name="submitType" value="create">Create</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
